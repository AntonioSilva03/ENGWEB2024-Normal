extends layout

block content 
    .w3-card-4
        header.w3-container.w3-blue
            h1 #{titulo} "#{entidade}" com NIPC: #{nipc}

        .w3-container
                table.w3-table-all
                    tr 
                        th ID Contrato
                        th Número Anúncio
                        th Tipo Procedimento
                        th Objecto Contrato
                        th Data Publicação
                        th Data de Celebração do Contrato 
                        th Preço Contratual
                        th Prazo Execução
                        th Fundamentação
                        
                    each contrato in contratos
                        tr
                            td
                                a(href='/' + contrato.idcontrato)= contrato.idcontrato
                            td= contrato.nAnuncio ? contrato.nAnuncio : 'Sem informação'
                            td= contrato.tipoprocedimento
                            td= contrato.objectoContrato
                            td= contrato.dataPublicacao
                            td= contrato.dataCelebracaoContrato
                            td= contrato.precoContratual
                            td= contrato.prazoExecucao
                            td= contrato.fundamentacao ? contrato.fundamentacao : 'Sem informação'
        
        h2 Valor dos contratos = #{somatorio}
        
        footer.w3-container.w3-blue
                h5 
                    span [ 
                        a(href="/") Voltar à página inicial 
                    span ]